{
  "name": "@kanban-client/root",
  "private": true,
  "scripts": {
    "start": "lerna run --scope @kanban-client/* --parallel start",
    "build": "lerna run --scope @kanban-client/* --parallel build",
    "serve": "lerna run --scope @kanban-client/* --parallel serve",
    "clean": "lerna run --scope @kanban-client/* --parallel clean",
    "lint": "lerna run --scope @kanban-client/rootApp lint",
    "bootstrap": "lerna bootstrap --ignore-scripts",
    "add:rootApp": "lerna add --scope @kanban-client/rootApp "
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
